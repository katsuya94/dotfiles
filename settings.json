{
    "editor.fontSize": 12,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "f", "f"],
            "commands": [
                "workbench.action.quickOpen"
            ]
        },
        {
            "before": ["<leader>", "r", "f"],
            "commands": [
                "workbench.action.files.saveAll",
                "go.test.cursor"
            ]
        },
        {
            "before": ["<leader>", "r", "b"],
            "commands": [
                "workbench.action.files.saveAll",
                "go.test.file"
            ]
        },
        {
            "before": ["<leader>", "r", "l"],
            "commands": [
                "workbench.action.files.saveAll",
                "go.test.previous"
            ]
        },
        {
            "before": ["<leader>", "r", "r"],
            "commands": [
                "workbench.action.files.saveAll",
                "go.test.workspace"
            ]
        },
        {
            "before": ["<leader>", "r", "p"],
            "commands": [
                "workbench.action.files.saveAll",
                "go.test.package"
            ]
        },
        {
            "before": ["<leader>", "t", "t"],
            "commands": [
                "workbench.action.terminal.toggleTerminal"
            ]
        },
        {
            "before": ["<leader>", "c", "c"],
            "commands": [
                "editor.action.commentLine"
            ]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["<leader>", "c", "c"],
            "commands": [
                "editor.action.commentLine"
            ]
        }
    ],
    "flow.pathToFlow": "${workspaceRoot}/node_modules/.bin/flow",
    "typescript.validate.enable": false,
    "javascript.validate.enable": false,
    "editor.wordWrap": "on",
    "editor.minimap.enabled": false,
    "editor.formatOnSave": false,
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "editor.fontFamily": "'Fantasque Sans Mono', 'Monaco', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "files.associations": {
        "*.scm": "lisp"
    },
    "go.useLanguageServer": true,
    "window.zoomLevel": 0,
    "ruby.lint": {
        "reek": true,
        "rubocop": true,
        "ruby": true, //Runs ruby -wc
        "fasterer": true,
        "debride": true,
        "ruby-lint": true
    },
    "[ruby]": {
        "editor.formatOnSave": true,
        "editor.tabSize": 2
    },
    "ruby.format": "rubocop",
    "editor.formatOnSaveTimeout": 1500,
    "ruby.intellisense": false
}
